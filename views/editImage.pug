extends layouts/main.pug

block content
    .form-container
        form(action=routes.editImage(image._id), method='post')
            input(type='text', value=image.title, name='title')
            textarea(name='description')=image.description
            input(type='submit', value='Update')
    .delete-image
        a(href=routes.deleteImage(image._id))
            button Delete Image

